<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/rounded_corner_btn_white_blue"
    >





    <ImageView
        android:layout_margin="1dp"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/rounded_corner_btn_white_blue"
        android:scaleType="centerCrop"
        />


    <LinearLayout
        android:padding="7dp"
        android:id="@+id/barraNav"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >


<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/nomeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:text="catiorro"/>

    <TextView
            android:id="@+id/Status_pet"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_height="20dp"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
            android:text="Status: adotado " />



</LinearLayout>

        <Button
            android:id="@+id/novoPetButton"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_corner_btn_dark_blue"
            android:layout_marginLeft="@dimen/fab_margin"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:text="Adote" />

        <Button
            android:id="@+id/Perfil"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_corner_btn_dark_blue"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_marginLeft="@dimen/fab_margin"
            android:text="Ver mais"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>